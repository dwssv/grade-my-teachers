<% layout('layouts/boilerplate') %>
    <div class="row mb-5">
        <h1 class="text-center">Add a Rating</h1>
        <div class="col-6 offset-3">
            <form action="/ratings" method="POST" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="school">Name of School</label>
                    <input class="form-control" type="text" name="rating[school]" id="school" required/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="teacher">Teacher's Name</label>
                    <input class="form-control" type="text" name="rating[teacher]" id="teacher" required/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="course">Department</label>
                    <select class="form-select" type="text" name="rating[department]" id="department" required>
                        <option selected>-- Open this select menu --</option>
                        <% for (let d of departments) { %>
                            <option value="<%= d %>"><%= d %></option>
                        <% } %>
                      </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="comment">Comment</label>
                    <textarea class="form-control" name="rating[comment]" id="comment" required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="quality">Quality Rating</label>
                    <input class="form-control" type="text" name="rating[quality]" id="quality" required/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="difficulty">Difficulty Rating</label>
                    <input class="form-control" type="text" name="rating[difficulty]" id="difficulty" required/>
                </div class="mb-3 ">
                <button type="submit" class="btn btn-primary" >Add Rating</button>
            </form>
        </div>
    </div>