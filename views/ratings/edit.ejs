<% layout('layouts/boilerplate') %>
<div class="row mb-5">
    <h1 class="text-center">Edit Rating</h1>
    <div class="col-6 offset-3">
        <form action="/ratings/<%= rating._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="school">Name of School</label>
                <input class="form-control" type="text" name="rating[school]" id="school" value="<%= rating.school %>"/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="teacher">Teacher's Name</label>
                <input class="form-control" type="text" name="rating[teacher]" id="teacher" value="<%= rating.teacher %>"/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="course">Department</label>
                <select class="form-select" type="text" name="rating[department]" id="department">
                    <% for (let d of departments) { %>
                        <option <%= d == rating.department ? "selected" : "" %> value="<%= d %>"><%= d %></option>
                    <% } %>
                  </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="comment">Comment</label>
                <textarea class="form-control" name="rating[comment]" id="comment"><%= rating.comment %></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="quality">Quality Rating</label>
                <input class="form-control" type="text" name="rating[quality]" id="quality" value="<%= rating.quality %>"/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="difficulty">Difficulty Rating</label>
                <input class="form-control" type="text" name="rating[difficulty]" id="difficulty" value="<%= rating.difficulty %>"/>
            </div class="mb-3 ">
            <button type="submit" class="btn btn-primary">Edit Rating</button>
        </form>
    </div>
</div>

