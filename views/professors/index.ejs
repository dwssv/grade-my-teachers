<% layout('layouts/boilerplate') %>
    <h3 class="mb-3">All Professors</h3>
    <div>
    <% for (let p of professor) { %>
          <div class="card mb-3" style="max-width: 750px;">
            <div class="row g-0">
              <div class="col-2">
                <div class="card-body">
                    <div class="text-center">
                        <div>Quality</div>
                        <h2>4.0</h2>
                    </div>
                </div>
              </div>
              <div class="col-10">
                <div class="card-body">
                    <h4><a href="/professors/<%= p._id %>" class="text-black"><%= p.first %> <%= p.last %></a></h4>
                    <p class="card-text text-muted"><%= p.department %></p>
                    <p class="card-text"><b>3.0</b> level of difficulty</p>
                </div>
              </div>
            </div>
          </div>
    <% } %>
</div>