<% layout('layouts/boilerplate') %>
<div class="row mb-5">
    <h1 class="text-center">Edit Professor</h1>
    <div class="col-6 offset-3">
        <form action="/professors/<%= professor._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="first">First Name</label>
                <input class="form-control" type="text" name="professor[first]" id="first" value="<%= professor.first %>" required/>
                <div class="invalid-feedback">First name must be at least two letters long</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="last">Last Name</label>
                <input class="form-control" type="text" name="professor[last]" id="last" value="<%= professor.last %>" required/>
                <div class="invalid-feedback">Last name must be at least two letters long</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="course">Department</label>
                <select class="form-select" type="text" name="professor[department]" id="department" required>
                    <% for (let d of departments) { %>
                        <option <%= d == professor.department ? "selected" : "" %> value="<%= d %>"><%= d %></option>
                    <% } %>
                </select>
                <div class="invalid-feedback">Department must be selected</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button type="submit" class="d-inline btn btn-primary">Edit Rating</button>
            <form class="d-inline" action="/professors/<%= professor._id %>">
                <button class="btn btn-success">Back</button>
            </form>
        </form>
    </div>  
</div>